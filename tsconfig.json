{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "declaration": true,
    "types": ["node", "vite"]
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "dist", "examples"]
}
